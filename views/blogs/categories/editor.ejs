<form class="container py-3" method="POST" enctype="multipart/form-data">
    <h1 class="mb-3"><%= category.id ? "Edit Category" : "Add new Category" %></h1>
    <% if(category.id) { %> <input class="d-none" value="<%= category.id %>" name="id" /> <% } %>
    <input type="text" class="form-control mb-4" name="name" placeholder="Category Name" value="<%= category.name %>" required />
    <div class="d-flex justify-content-end">
        <button class="btn btn-primary">Save</button>
    </div>
</form>
